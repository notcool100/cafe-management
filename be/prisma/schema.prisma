// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  planId      String?
  subscriptions Subscription[]
  users       User[]
  branches    Branch[]
  menuItems   MenuItem[]
  orders      Order[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Plan {
  id             String    @id @default(uuid())
  slug           String    @unique
  name           String
  branchesLimit  Int?
  seatsLimit     Int?
  menuItemsLimit Int?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  subscriptions  Subscription[]
}

model Subscription {
  id          String   @id @default(uuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  planId      String
  plan        Plan     @relation(fields: [planId], references: [id])
  status      SubscriptionStatus @default(ACTIVE)
  startedAt   DateTime @default(now())
  renewsAt    DateTime?
  cancelledAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tenantId])
  @@index([planId])
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  isActive  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  refreshToken String?

  @@index([email])
  @@index([branchId])
  @@index([tenantId])
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
  SUPER_ADMIN
}

model Branch {
  id              String     @id @default(uuid())
  name            String
  location        String
  isActive        Boolean    @default(true)
  hasTokenSystem  Boolean    @default(false)
  maxTokenNumber  Int?
  currentToken    Int        @default(0)
  lastTokenReset  DateTime   @default(now())
  qrCode          String?    @db.Text
  users           User[]
  menuItems       MenuItem[]
  orders          Order[]
  tenantId        String
  tenant          Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@index([tenantId])
}

model MenuItem {
  id          String      @id @default(uuid())
  name        String
  description String?
  price       Decimal     @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  isAvailable Boolean     @default(true)
  branchId    String
  branch      Branch      @relation(fields: [branchId], references: [id], onDelete: Cascade)
  tenantId    String
  tenant      Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([branchId])
  @@index([category])
  @@index([tenantId])
}

model Order {
  id            String      @id @default(uuid())
  tokenNumber   Int?
  branchId      String
  branch        Branch      @relation(fields: [branchId], references: [id])
  tenantId      String
  tenant        Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  status        OrderStatus @default(PENDING)
  orderItems    OrderItem[]
  totalAmount   Decimal     @db.Decimal(10, 2)
  customerName  String?
  customerPhone String?
  completedBy   String?
  createdAt     DateTime    @default(now())
  completedAt   DateTime?
  updatedAt     DateTime    @updatedAt
  cancellationRequestedAt    DateTime?
  cancellationRequestedBy    String?
  cancellationExpiresAt      DateTime?
  cancellationFinalizedAt    DateTime?
  cancellationPreviousStatus OrderStatus?
  deviceId     String?

  @@index([branchId])
  @@index([tenantId])
  @@index([status])
  @@index([tokenNumber])
  @@index([createdAt])
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  COMPLETED
  CANCELLED
  CANCELLATION_PENDING
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  quantity   Int
  price      Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now())

  @@index([orderId])
  @@index([menuItemId])
}
